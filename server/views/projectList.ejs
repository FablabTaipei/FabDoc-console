<!doctype html>
<html lang="en">

<head>
    <% include partials/head %>
</head>

<body>

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="container">
            <div class="col-md-3">

            </div>
            <div class="col-md-9">
                <ul class="list-unstyled" id="project-list">
                    <li class="row project-item" v-for="item in items">
                        <div class="col-md-8 project-name">
                            <h3>
                                <a :href="'/project/' + item.id + '/commits'"> {{item.name}} </a>
                            </h3>
                            <p>
                                {{item.description}}
                            </p>
                        </div>
                        <div class="col-md-4 project-img">
                            <a href="#">
                            <img class="project-img" src="" />
                        </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </main>

    <footer>
        <% include partials/footer %>
    </footer>

    <script type="text/javascript">
        var projectList = new Vue({
            el: '#project-list',
            data: {
                items: []
            },
            mounted: function () {
                var self = this;
                self.fetchNews(0, 10);
            },
            methods:{
                fetchNews: function(index, length){
                    var self = this;
                    $.ajax({
                        url: '<%= getUrl %>?idx=' + index + '&len=' + length,
                        method: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            if(data.items){
                                data.items.forEach(function(item){
                                    self.items.push(item);
                                });
                            }else{

                            }
                        },
                        error: function (error) {
                            console.log(JSON.stringify(error));
                        }
                    });
                }
            }
        });
    </script>

</body>

</html>
